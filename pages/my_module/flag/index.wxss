page {
  background: #FF5651;
  display: flex;
  flex-direction: column;
  align-items: center;
  align-content: center;
}

.hot-biz {
  width: 90%;
  border-radius: 20rpx;
  background-color: #fff;
  margin: 10rpx;
  padding: 5rpx;
}

.hot-top {
  display: flex;
}

.tx {
  color: #FF5651;
  margin-left: 16rpx;
  margin-bottom: 5px;
  font-weight: bold;
}

.hot-item-list {
  margin: 0 auto;
  width: 94%;
  margin-bottom: 20px;
  align-items: center;
}

.hot-biz-list {
  display: flex;
  justify-content: space-between;
  height: 100%;
  align-items: center;

}

.hot-biz-list .item {
  width: 50px;
  flex-direction: column;
  align-items: center;
  height: 50px;
  padding-right: 8px;
}

.hot-biz-list image {
  width: 50px;
  height: 50px;
  border-radius: 5px;
  margin: 0 auto;
  display: block;
  border: 1px solid rgb(235, 235, 245);
}

.canvas-view {
  width: 100%;
  align-content: center;
  align-items: center;
  text-align: center;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.canvas-view-right {
  display: flex;
  flex-direction: column;
  margin-top: 20px;
}



.btn {
  background-color: #EB9A41;
  border-radius: 10rpx;
  color: #ffffff;
  width: 130px !important;
  height: 40px !important;
  font-size: 32rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  margin-bottom: 15px;
  margin-right: 20px;
}